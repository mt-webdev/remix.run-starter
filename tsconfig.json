{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2020",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "@styles/*": ["app/styles/*"]
    },

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
